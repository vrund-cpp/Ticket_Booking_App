generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        String   @id @default(uuid())
  name      String
  email     String   @unique
  mobile    String   @unique
  verified  Boolean  @default(false)
  createdAt DateTime @default(now())
  updatedAt DateTime @default(now())
}

model OTPRequest {
  id         String   @id @default(uuid())
  identifier String
  hashedOtp  String
  createdAt  DateTime @default(now())
  expiresAt  DateTime
}
